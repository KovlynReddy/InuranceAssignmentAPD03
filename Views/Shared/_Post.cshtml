@model PostViewModel

<div class="card" style="width:500px">
    <img class="card-img-top" src="~/@Model.Image" alt="Card image">
    <div class="card-img-overlay">
        <h4 class="card-title">@Model.Title</h4>
        <p class="card-text">@Model.Text</p>
        <a href="@Model.Link" class="btn btn-primary">@Model.Link</a>
    </div>
</div>