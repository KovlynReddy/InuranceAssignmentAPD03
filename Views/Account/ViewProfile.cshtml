@model InuranceAssignmentAPD03.Models.ProfileViewModel



<form asp-action="DepositMoney" asp-controller="Account">
    <div class="jumbotron-fluid">
        <img src="~/StalkImage.png" class="rounded-circle img-thumbnail" alt="Profile Picture" /><br />
        <strong>@Model.user.Email<br /></strong><br /><br />
        <strong>Balance :</strong>  @Model.account.Balance
        <br />
        <strong>Deposit :</strong> <input asp-for="depositAmount" />

        <input asp-for="user.UserId" type="hidden" />
        <input asp-for="profile.ProfileId" type="hidden" />
        <input asp-for="account.AccountId" type="hidden" />


        <input type="submit" name="name" id="name" value="Deposit" class="btn btn-success"/>

    </div>
</form>
<a class="nav-link text-dark btn btn-primary" asp-area="" asp-controller="Policy" asp-action="Index">+Profile</a>

<script type="text/javascript">

    $(document).ready(function () {

            $("#name").click(function (e) {
                e.preventDefault();
                $.ajax({
                    type: "POST",
                    url: "https://www.sandbox.paypal.com/cgi-bin/webscr?cmd=_xclick&amount=”+(@Model.depositAmount/15.49)+“&business=Hopeinsurance@hope.com&item_name=premium_Items&retum=https://google.com",
                    success: function (result) {
                        alert('ok');
                    },
                    error: function (result) {
                        alert('error');
                    }
                });
            });
</script>